header
  .navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        = link_to "OBOTAN", root_path, id: "logo", class: 'navbar-brand'
        button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main"
          span class="icon-bar"
          span class="icon-bar"
          span class="icon-bar"

      nav.navbar-collapse.collapse#navbar-main
        ul.nav.navbar-nav.navbar-right
          - if @user
            - unless @categories.blank?
              li
                = link_to "単語を追加", new_word_path
            li
              = link_to "カテゴリを追加", new_category_path
            li
              = link_to "/#{@user.user_name}" do
                = image_tag twitter_icon(@user.user_name, 'mini'), id: 'user_icon'
                = @user.user_name
            li
              = link_to "ログアウト", destroy_user_session_path

          - else
            li
              = link_to "Twitterでログイン", user_omniauth_authorize_path(:twitter)

